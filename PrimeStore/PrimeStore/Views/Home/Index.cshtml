@model IEnumerable<File>
    <div class="container-fluid">
        <div class="row gy-2">
            <div class="sidebar col flex-shrink-0 p-3 bg-body-tertiary" style="width: 280px;">
                <hr>
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a href="#" class="nav-link active" aria-current="page">
                            <i class="bi bi-archive-fill"></i>
                            Файлы
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link link-body-emphasis">
                            <i class="bi bi-trash"></i>
                            Корзина
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link link-body-emphasis">
                            <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#table"></use></svg>
                            Orders
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link link-body-emphasis">
                            <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#grid"></use></svg>
                            Products
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link link-body-emphasis">
                            <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#people-circle"></use></svg>
                            Customers
                        </a>
                    </li>
                </ul>
                <hr>
            </div>
            <main class="col-sm-10">
                <div class="row mt-3">
                    @{
                        foreach (var file in Model)
                        {
                            <div class="col-8 col-sm-6">
                                <div class="card shadow-sm">
                                    <svg class="bd-placeholder-img card-img-top" width="50%" height="100" role="img"
                                         aria-label="Placeholder: Типо фотка дока">
                                        <title>Placeholder</title>
                                        <rect width="100%" height="100%" fill="#55595c"></rect>
                                        <text x="5%" y="50%" fill="#eceeef" dy=".3em">Типо фотка дока</text>
                                    </svg>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">Название файла: @file.Filename</p>
                                </div>
                                <div class="d-flex justify-content-between align-items-centre">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-arrow-bar-down"></i>
                                        Скачать
                                    </button>
                                    <small class="text-body-secondary">9 mins</small>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-trash"></i>
                                        В корзину
                                    </button>
                                </div>
                            </div>
                        }
                    }
                </div>
            </main>
        </div>
    </div>
    <script src="~/js/bootstrap.min.js"></script>


